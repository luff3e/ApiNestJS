generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())

  questions Question[]
  answers   Answer[]
}

model Question {
  id        String    @id @default(uuid())
  title     String
  content   String
  createdAt DateTime  @default(now())

  authorId  String
  author    User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  answers   Answer[]
}

model Answer {
  id         String    @id @default(uuid())
  content    String
  createdAt  DateTime  @default(now())

  authorId   String
  author     User      @relation(fields: [authorId], references: [id], onDelete: Cascade)

  questionId String
  question   Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
}